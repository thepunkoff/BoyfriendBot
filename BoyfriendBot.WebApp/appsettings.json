{
  "LoggingAbsolutePath": "C:/BoyfriendBot/Logs",

  "ResourceManager": {
    "BotTokenPath": "Data/Private/token.json",
    "ProxyPath": "Data/Private/proxyAppSettings.json",
    "MessagesDocPath": "Data/messages.xml",
    "MenusDocPath": "Data/dialogMenus.json",
    "MatchGraphPath": "Data/matchCategoryPatterns.xml",
    "RantPackagePath": "Data/Rant/rantionary-rus-1.0.0.rantpkg",
    "ImagesDirectoryAbsolutePath": "C:/BoyfriendBot/Images",
    "ImagesDocPath": "Data/images.json",
    "SessionScriptsPath": "Data/Sessions"
  },

  "Database": {
    "BoyfriendBotDatabaseAbsolutePath": "C:/BoyfriendBot/Database/boyfriend_bot.db",
    "BoyfriendBotDevelopmentDatabaseAbsolutePath": "C:/BoyfriendBot/Database/boyfriend_bot_test.db"
  },

  "ScheduledMessageService": {
    "ScheduledMessageServiceOn": true,
    "WakeUpMessageOn": false,

    "ScheduleInMorning": true,
    "ScheduleInAfternoon": true,
    "ScheduleInEvening": true,
    "ScheduleInNight": true,

    "MorningMessagesCount": 3,
    "AfternoonMessagesCount": 3,
    "EveningMessagesCount": 3,
    "NightMessagesCount": 3,

    "ThresholdInHours": 0.5,

    "OverrideCategoryChanceNormalized": 0.2,

    "DefaultWhiteWeight": 100,
    "DefaultGreenWeight": 20,
    "DefaultBlueWeight": 10,
    "DefaultPurpleWeight": 5,
    "DefaultOrangeWeight": 1
  },
  "DateTimeGenerator": {
    "DateTimeGenerationMethod": "Smart", // Random, Smart
    "StepToNoiseRatio": 10 // noise is x times smaller than time between messages
  },

  "ListeningService": {
    "ListeningServiceOn": true
  }
}
