{
  "BotTokenRelativePath": "Data/token.txt",

  "ProxyConfigRelativePath": "Data/proxyAppSettings.json",

  "Database": {
    "BoyfriendBotDatabaseAbsolutePath": "G:/SQLite/boyfriend_bot.db"
  },
  "MessageTextProvider": {
    "RelativeFilePath": "Data/messages.xml"
  },

  "ScheduledMessageService": {
    "ScheduledMessageServiceOn": true,
    "WakeUpMessageOn": false,

    "ScheduleInMorning": true,
    "ScheduleInAfternoon": true,
    "ScheduleInEvening": true,
    "ScheduleInNight": true,

    "MorningMessagesCount": 3,
    "AfternoonMessagesCount": 3,
    "EveningMessagesCount": 3,
    "NightMessagesCount": 3,

    "ThresholdInHours": 0.5

  },
  "DateTimeGenerator": {
    "DateTimeGenerationMethod": "Smart", // Random, Smart
    "StepToNoiseRatio": 10 // noise is x times smaller than time between messages
  },

  "InlineKeyboardMenuParser": {
    "MenusJsonRelativePath": "Data/dialogMenus.json",
    "RelativeRantPackagePath": "Data/rantPackage.rantpkg"
  },

  "ListeningService": {
    "ListeningServiceOn": true
  }
}
