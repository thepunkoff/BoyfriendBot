@model BoyfriendBot.WebApp.Models.MonitorViewModel
@using BoyfriendBot.WebApp.Controllers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h1>BoyfriendBot v.0.0.1</h1>
<p>@Model.Description</p>
<p>(@Model.Uptime)</p>

<table>
    <tr>
        <th>Feature</th>
        <th>State</th>
    </tr>
    <tr>
        <td>Listening</td>
        <td>@Model.Listening</td>
    </tr>
    <tr>
        <td>Scheduling messages</td>
        <td>@Model.SchedulingMessages</td>
    </tr>
</table>

<p>Total users registered: @Model.TotalUsers</p>

<button onClick="window.location.reload();">Refresh</button>
<br>
<a asp-controller="BoyfriendBot" asp-action="Reschedule">click to reschedule messages</a>
